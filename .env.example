# ============================================================
# Polymarket Trading Bot - Advanced Configuration
# ============================================================
# Copy this to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# WALLET CONFIGURATION (REQUIRED FOR TRADING)
# ===========================================
# Your Polygon wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Your wallet address (with 0x prefix)
WALLET_ADDRESS=0xYourWalletAddressHere

# Funder address (optional, for proxy wallets)
FUNDER_ADDRESS=

# Signature type: 0=EOA, 1=POLY_PROXY, 2=POLY_GNOSIS_SAFE
SIGNATURE_TYPE=0

# ===========================================
# API CONFIGURATION
# ===========================================
CLOB_HOST=https://clob.polymarket.com
GAMMA_API_HOST=https://gamma-api.polymarket.com
CHAIN_ID=137

# ===========================================
# TRADING PARAMETERS
# ===========================================
# Minimum profit margin to execute (1.5% accounts for slippage)
MIN_PROFIT_MARGIN=0.015

# Maximum position size in USDC
MAX_POSITION_SIZE=100

# Minimum liquidity required in market (USDC)
MIN_LIQUIDITY=1000

# Maximum slippage tolerance
MAX_SLIPPAGE=0.01

# Skip opportunities with spread < 1%
MIN_SPREAD_THRESHOLD=0.01

# Enable dry run mode (RECOMMENDED to start)
DRY_RUN=true

# ===========================================
# KELLY CRITERION POSITION SIZING
# ===========================================
# Kelly multiplier: 0.25 (quarter) for $50-100, 0.50 (half) for larger
KELLY_FRACTION=0.25

# Maximum % of bankroll per position (5% = conservative)
MAX_POSITION_PERCENT=0.05

# Maximum total exposure across all positions
MAX_TOTAL_EXPOSURE=0.20

# Minimum trade size in USDC
MIN_TRADE_SIZE=1.0

# ===========================================
# STRATEGY TOGGLES
# ===========================================
ENABLE_BINARY_ARB=true
ENABLE_MULTI_OUTCOME_ARB=true
ENABLE_ENDGAME_ARB=true
ENABLE_CROSS_PLATFORM_ARB=false
ENABLE_WHALE_TRACKING=false
ENABLE_MARKET_MAKING=false

# ===========================================
# WHALE TRACKING (Smart Money)
# ===========================================
WHALE_POLL_INTERVAL=4
# Comma-separated wallet addresses to track
WHALE_TARGET_WALLETS=
# Max position per market when copy trading
WHALE_MAX_COPY_PERCENT=0.20
# Minimum whales agreeing before trading
WHALE_MIN_CONSENSUS=2

# ===========================================
# MONITORING
# ===========================================
# REST API poll interval (seconds)
POLL_INTERVAL=5

# Use WebSocket for real-time updates (recommended)
USE_WEBSOCKET=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===========================================
# RISK MANAGEMENT
# ===========================================
# Stop trading after this daily loss
MAX_DAILY_LOSS=50

# Maximum concurrent positions
MAX_OPEN_POSITIONS=10

# Seconds between trades
TRADE_COOLDOWN=2

# Blackout period around news events (minutes)
NEWS_BLACKOUT_MINUTES=30

# Large trade detection threshold (informed flow signal)
WHALE_TRADE_THRESHOLD=10000

# ===========================================
# NOTIFICATIONS (OPTIONAL)
# ===========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===========================================
# VPS RECOMMENDATIONS
# ===========================================
# Optimal locations for low latency:
# 1. Netherlands/Amsterdam (closest to Polymarket)
# 2. Frankfurt, Germany
# 3. US East Coast (Virginia/New York)
#
# Recommended specs: 4 vCPU, 8GB RAM, NVMe SSD
# Providers: TradingVPS.io, QuantVPS, Hetzner, AWS eu-west-1
